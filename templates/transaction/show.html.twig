{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.task_details'|trans({'%id%': transaction.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.task_details'|trans({'%id%': transaction.id|default('')}) }}</h1>
    {% if transaction is defined and transaction|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ transaction.id }}</dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ transaction.createdAt|format_date('long') }}</dd>
            <dt>{{ 'label.updated_at'|trans }}</dt>
            <dd>{{ transaction.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{  transaction.title }}</dd>
            <dt>{{ 'label.category'|trans }}</dt>
            <dd>{{  transaction.category.title }}</dd>
        </dl>
        <p>
            <a href="{{ url('transaction_index') }}" title="{{ 'action.back'|trans }}">
                {{ 'action.back'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}