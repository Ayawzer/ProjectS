{% extends 'base.html.twig' %}

{% block title %}
    {% if record is defined and record|length %}
        {{ 'title.record_view'|trans({'%id%': record.id}) }}
    {% endif %}
{% endblock %}

{% block body %}
    {% if record is defined and record|length %}
        <h1>{{ 'title.record_view'|trans({'%id%': record.id}) }}</h1>
    {% endif %}
    {% if record is defined and record|length %}
        <dl>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{ record.title }}</dd>
            <dt>{{ 'label.content'|trans }}</dt>
            <dd>{{ record.content }}</dd>
            <dt>{{ 'label.tags'|trans }}</dt>
            <dd>{{ record.tags|join(', ') }}</dd>
        </dl>
        <a href="{{ url('record_index') }}">{{ 'action.back'|trans }}</a>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
        <a href="{{ url('record_index') }}">{{ 'action.back'|trans }}</a>
    {% endif %}
{% endblock %}